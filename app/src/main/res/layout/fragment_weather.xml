<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Loading -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Error -->
            <TextView
                android:id="@+id/text_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="#FF6B6B"
                android:visibility="gone"
                tools:text="Ошибка загрузки"
                tools:visibility="visible" />

            <!-- Header - Current Weather -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="32dp"
                android:paddingBottom="32dp">

                <TextView
                    android:id="@+id/text_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    tools:text="Мой Городок" />

                <TextView
                    android:id="@+id/text_current_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="96sp"
                    android:fontFamily="sans-serif-thin"
                    tools:text="-5°" />

                <TextView
                    android:id="@+id/text_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EBEBF5"
                    android:textSize="18sp"
                    tools:text="Переменная облачность" />

                <TextView
                    android:id="@+id/text_high_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#EBEBF5"
                    android:textSize="18sp"
                    tools:text="Макс: -2°  Мин: -12°" />

            </LinearLayout>

            <!-- Hourly Forecast Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#2C2C2E"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather_hourly_forecast"
                        android:textColor="#EBEBF5"
                        android:textSize="12sp"
                        android:textAllCaps="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:background="#3A3A3C" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_hourly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        tools:listitem="@layout/item_hourly_weather" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Forecast Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#2C2C2E"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather_daily_forecast"
                        android:textColor="#EBEBF5"
                        android:textSize="12sp"
                        android:textAllCaps="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="#3A3A3C" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_daily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_daily_weather" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Weather Details Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Left Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="6dp">

                    <!-- Feels Like -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#2C2C2E"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weather_feels_like"
                                android:textColor="#EBEBF5"
                                android:textSize="12sp"
                                android:drawableStart="@drawable/ic_thermometer"
                                android:drawablePadding="4dp"
                                app:drawableTint="#EBEBF5" />

                            <TextView
                                android:id="@+id/text_feels_like"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="32sp"
                                tools:text="-9°" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Humidity -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#2C2C2E"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weather_humidity"
                                android:textColor="#EBEBF5"
                                android:textSize="12sp"
                                android:drawableStart="@drawable/ic_humidity"
                                android:drawablePadding="4dp"
                                app:drawableTint="#EBEBF5" />

                            <TextView
                                android:id="@+id/text_humidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="32sp"
                                tools:text="78%" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Visibility -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#2C2C2E"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weather_visibility"
                                android:textColor="#EBEBF5"
                                android:textSize="12sp"
                                android:drawableStart="@drawable/ic_visibility"
                                android:drawablePadding="4dp"
                                app:drawableTint="#EBEBF5" />

                            <TextView
                                android:id="@+id/text_visibility"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="32sp"
                                tools:text="8 км" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Sunrise -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#2C2C2E"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weather_sunrise"
                                android:textColor="#EBEBF5"
                                android:textSize="12sp"
                                android:drawableStart="@drawable/ic_sunrise"
                                android:drawablePadding="4dp"
                                app:drawableTint="#EBEBF5" />

                            <TextView
                                android:id="@+id/text_sunrise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="32sp"
                                tools:text="08:32" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Right Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="6dp">

                    <!-- Wind -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#2C2C2E"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weather_wind"
                                android:textColor="#EBEBF5"
                                android:textSize="12sp"
                                android:drawableStart="@drawable/ic_wind"
                                android:drawablePadding="4dp"
                                app:drawableTint="#EBEBF5" />

                            <TextView
                                android:id="@+id/text_wind"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="24sp"
                                tools:text="4.5 м/с СЗ" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Pressure -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#2C2C2E"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weather_pressure"
                                android:textColor="#EBEBF5"
                                android:textSize="12sp"
                                android:drawableStart="@drawable/ic_pressure"
                                android:drawablePadding="4dp"
                                app:drawableTint="#EBEBF5" />

                            <TextView
                                android:id="@+id/text_pressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="32sp"
                                tools:text="745 мм" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- UV Index -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#2C2C2E"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weather_uv_index"
                                android:textColor="#EBEBF5"
                                android:textSize="12sp"
                                android:drawableStart="@drawable/ic_sun"
                                android:drawablePadding="4dp"
                                app:drawableTint="#EBEBF5" />

                            <TextView
                                android:id="@+id/text_uv_index"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="32sp"
                                tools:text="1" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Sunset -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#2C2C2E"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weather_sunset"
                                android:textColor="#EBEBF5"
                                android:textSize="12sp"
                                android:drawableStart="@drawable/ic_sunset"
                                android:drawablePadding="4dp"
                                app:drawableTint="#EBEBF5" />

                            <TextView
                                android:id="@+id/text_sunset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/white"
                                android:textSize="32sp"
                                tools:text="16:45" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
