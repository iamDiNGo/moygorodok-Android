                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/event_about"
                    android:textColor="#8E8E93"
                    android:textSize="12sp"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:text="Ð“Ð¾Ñ€Ð¾Ð´ÑÐºÐ¾Ð¹ ÑÐ¸Ð¼Ñ„Ð¾Ð½Ð¸Ñ‡ÐµÑÐºÐ¸Ð¹ Ð¾Ñ€ÐºÐµÑÑ‚Ñ€ Ð¿Ñ€ÐµÐ´ÑÑ‚Ð°Ð²Ð»ÑÐµÑ‚ Ð¿Ñ€Ð¾Ð³Ñ€Ð°Ð¼Ð¼Ñƒ Ð¸Ð· Ð¿Ñ€Ð¾Ð¸Ð·Ð²ÐµÐ´ÐµÐ½Ð¸Ð¹ Ð’Ð¸Ð²Ð°Ð»ÑŒÐ´Ð¸ Ð¸ Ð§Ð°Ð¹ÐºÐ¾Ð²ÑÐºÐ¾Ð³Ð¾..." />

