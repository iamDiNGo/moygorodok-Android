                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#007AFF" />

                    <TextView
                        android:id="@+id/text_date_time"
                        android:layout_width="wrap_content"
